	<string>#!/bin/bash

# Get the current day of month
currentDate=$(/bin/date +"%d")

# If it's over 25...
if [ "$currentDate" -gt 25 ]; then

   dayBetweenNotifications=1
   
# If it's between 17 and 25...
elif [ "$currentDate" -gt 17 ]; then

   daysBetweenNotifications=3

# Otherwise...
else

   daysBetweenNotifications=17

fi

# Write the changes back
/usr/bin/defaults write /Library/Preferences/ManagedInstalls DaysBetweenNotifications -int "$daysBetweenNotifications"</string>
