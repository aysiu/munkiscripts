	<key>installcheck_script</key>
	<string>#!/bin/bash

# Get the current day of month
currentDate=$(/bin/date +"%d")

# Get the current days between notifications
daysBetweenNotifications=$(/usr/bin/defaults read /Library/Preferences/ManagedInstalls DaysBetweenNotifications)

# If it's over 25...
if [ "$currentDate" -gt 25 ] &amp;&amp; [ "$daysBetweenNotifications" == 1 ]; then

   # Installed
   # /bin/echo "Installed"
   exit 1

# If it's between 17 and 25...
elif [ "$currentDate" -gt 17 ] &amp;&amp; [ "$daysBetweenNotifications" == 3 ]; then

   # Installed
   # /bin/echo "Installed"
   exit 1

# If it's between 1 and 17
elif [ "$daysBetweenNotifications" == 17 ]; then

   # Installed
   # /bin/echo "Installed"
   exit 1

# Otherwise...
else

   # Not installed
   # /bin/echo "Not Installed"
   exit 0

fi</string>
