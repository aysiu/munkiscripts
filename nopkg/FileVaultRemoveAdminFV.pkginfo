	<key>name</key>
	<string>FileVaultRemoveAdmin</string>
	<key>postinstall_script</key>
	<string>#!/bin/bash

# Remove admin from fv-enabled users
/usr/bin/fdesetup remove -user SHORTNAMEOFADMINUSER</string>
